---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/sections/Hero.astro';
// import Contact from '../components/sections/Contact.astro';
import Footer from '../components/ui/Footer.astro';
import Stats from '../components/sections/Stats.vue';
import Services from '../components/sections/Services.astro';

// SEO optimized metadata
const seoTitle = "Litlynx - Modern Frontend Web Development & Digital Solutions";
const seoDescription = "Transform your business with cutting-edge frontend development. Litlynx delivers modern, fast, and scalable web applications using React, Vue, Astro, and the latest technologies. Get clean code, future-ready solutions, and expert support.";
const seoKeywords = [
  "frontend development",
  "web development company",
  "React development services",
  "Vue.js development",
  "Astro development",
  "modern web applications",
  "responsive web design",
  "performance optimization",
  "UI/UX design services",
  "JavaScript development",
  "TypeScript development",
  "custom software solutions",
  "web application development",
  "digital transformation",
  "frontend consulting"
];
const seoImage = {
  src: "https://www.litlynx.com/litlynx-og-image.jpg",
  alt: "Litlynx - Professional Frontend Web Development Services"
};
---

<MainLayout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  type="website"
  image={seoImage}
>
	<Hero />
  <Stats />
  <Services />
  <Footer />
</MainLayout>
